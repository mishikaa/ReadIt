<div class="header">
  <img class="mobile-logo" src="/images/website_logo.png" alt="website logo" />
  <div class="navbar">
    <!-- 1 -->
    <div class="heading-logo">
      <img class="logo" src="/images/website_logo.png" alt="website logo" />
      <h1 data-name="ReadIt" class="heading">ReadIt</h1>
    </div>

    <!-- 2 -->
    <ul class="navbar-list">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/blogs">Read</a>
      </li>
      <li class="dropdown">
        <a href="/categories">Categories</a>
        <ul class="dropdown-content">
          <a>Life</a>
          <a>Travel</a>
          <a>Food</a>
          <a>Technology</a>
          <a>Management</a>
        </ul>
      </li>

      <li>
        <a href="/blogs/write">Write</a>
      </li>
      <li>
        <a href="/about">About</a>
      </li>
      <li>
