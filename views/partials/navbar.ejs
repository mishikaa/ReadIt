    <!-- 3 -->
    <div class="rightbar">
      <% if(!currentUser) {%>
      <button id="getStarted" class="btn">
        <a href="/signup" style="color: black">Get Started</a>
      </button>
      <% } else {%>
      <button id="getStarted" class="btn">
        <a href="/logout" style="color: black">Logout</a>
      </button>
      <% } %>
    </div>
  </div>

  <div class="mobile-navbar-btn">
    <ion-icon name="menu-outline" class="mobile-navbar-icon"></ion-icon>
    <ion-icon name="close-outline" class="mobile-navbar-icon"></ion-icon>
  </div>
</div>

